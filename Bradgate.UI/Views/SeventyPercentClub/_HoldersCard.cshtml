@using Bradgate.General.Extensions.DateTimeExtensions
@model Bradgate.UI.ViewModels.SeventyPercentClub.Index.VmHolders

<!-- START card -->
<div class="card">
    <div class="card-body text-center bg-center" style="background-image: url('/img/bg3.jpg');">
        <div class="row">
            <div class="col-12 text-white">
                <h2 class="m-0 mt-5">Pam Leeson Trophy Holders</h2>
                <h3 class="m-0">
                    @Model.Player1 &amp; @Model.Player2
                </h3>
            </div>
        </div>
    </div>
    <div class="card-body text-center bg-gray-darker">
        <div class="row">
            <div class="col-6">
                <p class="m-0">Score</p>
                <h3 class="m-0">@Model.Score%</h3>
            </div>
            <div class="col-6">
                <p class="m-0">Held Since</p>
                <h3 class="m-0">@Model.HeldSince.ToDD_MMM_YYYY()</h3>
            </div>
        </div>
    </div>
</div>
<!-- END card -->
